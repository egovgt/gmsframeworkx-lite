        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>-->

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="LayoutItem">
        <item name="android:clickable">true</item>
        <item name="android:height">@dimen/item_height</item>
        <item name="android:paddingLeft">@dimen/margin_standard</item>
        <item name="android:paddingRight">@dimen/margin_standard</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@color/grey_50</item>
    </style>

    <style name="Button" parent="android:Widget.TextView">
        <item name="android:layout_marginTop">@dimen/margin_standard</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="EditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textColorHint">@color/grey_500</item>
        <item name="android:textSize">13sp</item>
        <item name="android:drawablePadding">8dp</item>
        <!--<item name="android:background">@null</item>-->
    </style>

    <style name="IconItemVector" parent="android:Widget.TextView">
        <item name="android:tint">@color/grey_500</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>


    </style>

    <style name="TextInItem" parent="StandardText">
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="TextInSubtitle" parent="StandardText">
        <item name="android:textSize">@dimen/text_small</item>

    </style>
    <style name="TextInTitle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/grey_900</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:textSize">@dimen/text_title</item>

    </style>
</resources>