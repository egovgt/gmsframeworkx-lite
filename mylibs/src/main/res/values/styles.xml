<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogAnimVertical">
        <item name="android:windowEnterAnimation">@anim/pull_in_top</item>
        <item name="android:windowExitAnimation">@anim/push_out_top</item>
    </style>
    <style name="DialogAnimHorizontal">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>
    <style name="clickable" parent="android:Widget.TextView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="KeteranganText" parent="StandardText">
        <item name="android:lines">4</item>
        <item name="android:gravity">top|start</item>
    </style>
    <style name="StandardText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">12dp</item>
    </style>


    <style name="StandardTextOneRow" parent="android:Widget.TextView">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="SubtitleText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">10dp</item>
    </style>
    <style name="SubtitleTextOneRow" parent="android:Widget.TextView">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="TagText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">10dp</item>
    </style>
    <style name="TagTextOneRow" parent="android:Widget.TextView">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">10dp</item>
    </style>

    <style name="TitleText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="TitleTextOneRow" parent="android:Widget.TextView">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="AppBarText" parent="android:Widget.TextView">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:tint">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="DialogTopAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>

    <style name="DialogBottomAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="DialogTopAnimationAlert">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom_alert</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top_alert</item>
    </style>


    <style name="CustomActionBar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/BackgroundActionBar</item>
        <item name="actionBarStyle">@style/BackgroundActionBar</item>
        <item name="alertDialogTheme">@style/dialogTheme</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/accent</item>
    </style>

    <style name="BackgroundActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/primary</item>
        <item name="background">@color/primary</item>
    </style>

    <style name="ToolBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/accent</item>
        <item name="android:actionBarStyle">@style/ToolBarThemeBackgroundActionBar</item>
        <item name="actionBarStyle">@style/ToolBarThemeBackgroundActionBar</item>
    </style>


    <style name="ToolBarTransTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/accent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="DashboardTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/accent</item>
        <item name="android:actionBarStyle">@style/ToolBarThemeBackgroundActionBar</item>
        <item name="actionBarStyle">@style/ToolBarThemeBackgroundActionBar</item>
    </style>


    <style name="StreamTheme" parent="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/accent</item>
    </style>


    <style name="ToolBarThemeBackgroundActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/primary</item>
    </style>

    <style name="dialogTheme" parent="Base.Theme.AppCompat.Light.Dialog.Alert"></style>

    <style name="AppThemeUcrop" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/accent</item>
    </style>


    <style name="DetailPageTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/accent</item>
    </style>


    <style name="ButtonStyle" parent="clickable">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/dimen_18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_round_corner</item>
    </style>
    <style name="BlackButtonStyle" parent="clickable">
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:padding">@dimen/dimen_18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_round_corner_black</item>
    </style>

    <style name="ButtonStandardStyle" parent="ButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:background">@drawable/bg_round_corner</item>
    </style>
    <style name="BlackButtonStandardStyle" parent="BlackButtonStyle">
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:padding">@dimen/dimen_10dp</item>
    </style>
    <style name="BlackButtonMiniStyle" parent="BlackButtonStyle">
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="ButtonStyleCancel" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/yellow_500</item>
        <item name="colorButtonNormal">@color/yellow_700</item>
    </style>

    <style name="ButtonLoginStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#00D2FE</item>
        <item name="colorButtonNormal">#00D2FF</item>
    </style>


    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/grey_500</item>
        <!--<item name="android:textSize">14sp</item>-->
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/primary</item>
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>


    <style name="BottomNavTextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>

    </style>

    <style name="Item" parent="">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogAnimationLand">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

